@page "/"
@using System.Diagnostics.CodeAnalysis;
@using System.Web

<FileAndDirectoryBrowserWebApp.Components.DirectoryComponent Path="@Path" />
@code {
    [Inject, NotNull]
    protected NavigationManager? NavigationManager { get; set; }

    protected string? Path { get; set; }

    protected override void OnInitialized()
    {
        var queryString = HttpUtility.ParseQueryString(NavigationManager.Uri);
        Path = queryString["path"];

        base.OnInitialized();
    }
}