@page "/"
@using System.Diagnostics.CodeAnalysis;
@using System.Web

@inject NavigationManager NavManager


<FileAndDirectoryBrowserWebApp.Components.DirectoryComponent Path="@Path" />

@code {
    protected string? Path { get; set; }

    protected override void OnInitialized()
    {
        var absoluteUri = NavManager.ToAbsoluteUri(NavManager.Uri);
        
        var queryString = HttpUtility.ParseQueryString(absoluteUri.Query);
        Path = queryString["path"];

        base.OnInitialized();
    }
}